<h1 align="center" style="margin-top: 20px;">Make and Test Resources</h1>


<div class="container" style="margin-top: 20px;">


  <div class="card">

    <div class="card-body">


      <div class="row">
        <div class="col-sm-6">
          <select onchange={{action 'onSelectedEntries' value="target.value" }} >
            <option value="0">Select Entries</option>
            <option selected>10</option>
            <option>20</option>
            <option>50</option>
            <option>100</option>
            <option>200</option>
            <option>300</option>
            <option>1000</option>
          </select>
        </div>

        <div class="col-sm-6">
          <ul class="pagination">
            <li {{action 'onPreviousClick' }} class="page-item"><a class="page-link"> &#60; </a></li>
            {{#each paginatePages as |value|}}
              <li {{action 'onSelectedPage' value}} class="page-item"><a class="page-link"> {{value}}</a></li>
            {{/each}}
            <li {{action 'onNextClick' }} class="page-item"><a class="page-link"> &#62; </a></li>
          </ul>
        </div>
      </div>




      <table class="table table-bordered">
        <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Age</th>
          <th>Description</th>
        </tr>
        </thead>
        <tbody>

        {{#each person as |value index|}}
          <tr>
            <td>{{index}}</td>
            <td>{{value.name}}</td>
            <td>{{value.age}}</td>
            <td>{{value.description}}</td>
          </tr>
        {{/each}}

        </tbody>
      </table>


    </div>
  </div>
</div>
