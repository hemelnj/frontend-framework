<style>
  .form-group {
    position: relative;
    min-width: 0;
  }

  .input-field-label {
    overflow-wrap: break-word;
    word-wrap: break-word;
    -webkit-hyphens: auto;
    -ms-hyphens: auto;
    hyphens: auto;
    display: inline-block;
    color: #707275;
    font-size: .75rem;
    font-weight: bolder;
    padding: 0 1rem 0 .75rem;
    margin-bottom: .125rem;
  }

  .input-field {
    border-left: 0;
    border-right: 0;
    border-top: 0;
    border-bottom: 1.1px solid #747474;
    width: 100%;
    -webkit-transition: border .1s linear, background-color .1s linear;
    transition: border .1s linear, background-color .1s linear;
    display: inline-block;
    padding: 0 1rem 0 .75rem;
    font-size: .75rem;
    line-height: 1.875rem;
    min-height: calc(1.875rem + (1px * 2));
    margin-bottom: .125rem;
    background: #FFFFFF;
  }

  .input-field:focus {
    outline: none;
    border-bottom: 1.5px solid rgba(81, 203, 238, 1);
  }

  .form-control {
    clear: left;
    position: relative;
  }

  .has-search .input-field {
    padding-left: 4.275rem;
  }

  .has-search .form-control-feedback {
    position: absolute;
    z-index: 2;
    display: block;
    width: 4.375rem;
    height: 4.375rem;
    line-height: 1.875rem;
    min-height: calc(1.875rem + (1px * 2));
    text-align: center;
    pointer-events: none;
    color: #aaa;
  }

  .muliti-select-item {
    padding: 0.25rem 0.25rem;
    color: #3e3e3c;
    font-size: .75rem;
    white-space: nowrap;
  }

  .table-all thead th {
    padding-left:0.85rem;
    background-color: #FEFEFE;
    color: #313131;
    font-size: .75rem;
    font-weight: bold;
    line-height: normal;
    font-weight: bolder;
    border-collapse: separate;
    border-top: 1px solid #EDEEEF;
    border-bottom: 1px solid #EDEEEF;
  }

  .table-all td {
    padding-left:0.85rem;
    color: #3e3e3c;
    font-size: .75rem;
    white-space: nowrap;
    position: relative;
    line-height: normal;
  }

  .table-bordered {
    border-collapse: separate;
    border-top: 1px solid #dddbda;
    border-bottom: 1px solid #dddbda;
  }

  .table-data {
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
</style>



<div class="card">
  <div class="card-body">
    <div class="col-md-12">
      <!--<h4 class="layout-title" style="font-size: 20px">User Creation</h4>-->
      <h4 class="layout-header-title">User Profiles</h4>
      <hr class="header-label-line">
      <div class="row">
        <div class="col-md-6">

          <div class="form-group has-search" style="margin-top:15px;">
            <span class="fa fa-search form-control-feedback"></span>
            <input type="text" class="input-field" onkeyup={{action 'getFilterKey' value='target.value'}}
                   placeholder="Type to Search">
          </div>

          <div class="table-container"
               style="overflow-y: auto; max-height: 350px; overflow-x: auto; margin-top:15px;">
            <table class="table-all">
              <thead>
              <tr class="line-height-reset">
                <th class="table-data table-bordered">
                  <div>
                    Id
                  </div>
                </th>
                <th class="table-data table-bordered">
                  <div>
                    Display Name
                  </div>
                </th>
                <th class="table-data table-bordered">
                  <div>
                    Email
                  </div>
                </th>
                <th class="table-data table-bordered">
                  <div>
                    Account Enabled
                  </div>
                </th>
                <th class="table-data table-bordered">
                  <div>
                    Role
                  </div>
                </th>
              </tr>
              </thead>
              <tbody>
              {{#each userList as |item index|}}
                <tr>
                  <td class="table-data table-bordered">
                    <div>
                      {{item.attributes.id}}
                    </div>
                  </td>
                  <td class="table-data table-bordered">
                    <div>
                      {{item.attributes.name}}
                    </div>
                  </td>
                  <td class="table-data table-bordered">
                    <div>
                      {{item.attributes.email}}
                    </div>
                  </td>

                  <td class="table-data table-bordered">
                    <div>
                      {{item.attributes.enabled}}
                    </div>
                  </td>
                  <td class="table-data table-bordered">
                    <div>

                      {{#each item.attributes.roles as |value|}}
                        <span>{{value.name}},</span><br>
                      {{/each}}
                      <!--<button data-toggle="modal" data-target="#actionEventModal" {{action 'editActionEvent' item }}
                                style="width: 100px; margin-bottom: 5px" class="button-all button-edit">Edit
                        </button>-->
                      <!--<button {{action 'deleteActionEvent'
                                           item }} style="width: 100px; margin-bottom: 5px" class="button-all button-danger">Delete</button>-->
                    </div>
                  </td>
                </tr>
              {{/each}}

              </tbody>
            </table>
          </div>
        </div>
        <div class="col-md-6">
          <div id="actionEventInfo" class="adjust-card-style field-form max-width" method="post">

            <div class="row" style="margin-top:15px;">
              <div class="col-md-3">
                <label for="name" class="input-field-label">Display Name</label>
              </div>
              <div class="col-md-9">
                {{input type="text" class="input-field" id="user"  name="user"
                        placeholder="Enter User Name"
                        value=name }}
              </div>
            </div>

            <div class="row" style="margin-top:15px;">
              <div class="col-md-3">
                <label for="name" class="input-field-label">User Name</label>
              </div>
              <div class="col-md-9">
                {{input type="text" class="input-field" id="userUnique"  name="user"
                        placeholder="Enter an Unique Name"
                        value=uniqueName }}
              </div>
            </div>

            <div class="row" style="margin-top:15px;">
              <div class="col-md-3">
                <label for="code" class="input-field-label">Email</label>
              </div>
              <div class="col-md-9">
                {{input type="text" class="input-field" id="userEmail" name="userEmail"
                        placeholder="Enter Email" value=email}}
              </div>
            </div>


            <div class="col" style="margin-top:15px; margin-left:0;">
              <label for="name" class="input-field-label" style="margin-left:-12px;">Select Roles</label>
              <select class="custom-select" id="userRole" style="margin-left:-5px;" multiple>
                {{#each roleList as |item index|}}
                  <option class="muliti-select-item" value={{item.attributes.id}}
                          name={{item.attributes.name}}>{{item.attributes.name}}</option>
                {{/each}}
              </select>
            </div>

            <div class="row">
              <div class="form-check" style="margin-top:10px; margin-left:10px;">
                <label class="form-check-label input-field-label">
                  {{input type="checkbox" class="form-check-input" id="isEnabled"  name="option1" checked=true}}
                  Account Enabled
                </label>
              </div>

              <div class="form-check" style="margin-top:10px;">
                <label class="form-check-label input-field-label">
                  {{input type="checkbox" class="form-check-input" id="accLocked"  name="option1"}}Account Locked
                </label>
              </div>
            </div>
            <div class="row">
              <div class="form-check" style="margin-top:10px; margin-left:10px;">
                <label class="form-check-label input-field-label">
                  {{input type="checkbox" class="form-check-input" id="accExpired"  name="option1"}}Account Expired
                </label>
              </div>

              <div class="form-check" style="margin-top:10px;">
                <label class="form-check-label input-field-label">
                  {{input type="checkbox" class="form-check-input" id="credentialExpired"  name="option1"}}Credential
                  Expired
                </label>
              </div>
            </div>

            <div class="form-btn-container float-right" style="margin-top:20px;">
              <div class="nges-button nges-button-success" style="width: 100px; margin-bottom: 5px" {{action
                "save"}}>
                Save
              </div>
            </div>
          </div>
          <br>
        </div>
      </div>
    </div>
  </div>

</div>