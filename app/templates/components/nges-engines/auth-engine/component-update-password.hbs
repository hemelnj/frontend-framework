<style>
  .width-400 {
    width: 400px;
  }
  .layout-title{
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 1.125rem;
    font-weight: 400;
    color: #645958;
    display: block;
  }

  hr {
    border: 0;
    max-width: 70%;
    margin-left: 0;
    margin-top: -5px;
    border-top: 3px solid;
    border-color: #B2B2B2;
  }

  .button-all{
    position: relative;
    display: inline-block;
    padding: 0;
    background: transparent;
    background-clip: border-box;
    border: 1px solid transparent;
    border-radius: .25rem;
    line-height: 1.575rem;
    text-decoration: none;
    color: #0070d2;
    -webkit-appearance: none;
    white-space: normal;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;


    font-size: .75rem;
    white-space: nowrap;
    position: relative;
  }

  .button-save{
    padding-left: 1.25rem;
    padding-right: 1.25rem;
    font-weight: 200px;
    text-align: center;
    vertical-align: middle;
    border: 1px solid #dddbda;
    -webkit-transition: border 0.15s linear;
    transition: border 0.15s linear;
    background-color: #00A09D;
    border-color: #00A09D;
    color: #080707;
  }
  .button-save:hover{
    background-color: rgb(0, 134, 132);
    border-color: rgb(0, 134, 132);
    color: #fff;
    font: bolder;
    cursor: pointer;
  }

  .button-danger{
    padding-left: 1rem;
    padding-right: 1rem;
    text-align: center;
    vertical-align: middle;
    border: 1px solid #dddbda;
    -webkit-transition: border 0.15s linear;
    transition: border 0.15s linear;
    background-color: #c23934;
    border-color: #c23934;
    color: #fff;
  }
  .button-danger:hover{
    background-color: #a61a14;
    border-color: #a61a14;
    color: #fff;
    cursor: pointer;
  }
  .button-edit{
    padding-left: 1rem;
    padding-right: 1rem;
    text-align: center;
    vertical-align: middle;
    border: 1px solid #dddbda;
    -webkit-transition: border 0.15s linear;
    transition: border 0.15s linear;
    border-color: #dddbda;
    background-color: #fff;
    border-color: #0070d2;
  }
  .button-edit:hover{
    background-color: #f4f6f9;
    border-color: #0070d2;
    color: #000;
    cursor: pointer;
  }

  .button-logout{
    padding-left: 1rem;
    padding-right: 1rem;
    text-align: center;
    vertical-align: middle;
    border: 1px solid #dddbda;
    -webkit-transition: border 0.15s linear;
    transition: border 0.15s linear;
    border-color: #dddbda;
    background-color: #fff;
    color: #c23934;
  }

  .button-logout:hover{
    background-color: #f4f6f9;
    color: #a12b2b;
    cursor: pointer;
  }
  .form-group{
    position: relative;
    min-width: 0;
  }

  .input-field-label{
    overflow-wrap: break-word;
    word-wrap: break-word;
    -webkit-hyphens: auto;
    -ms-hyphens: auto;
    hyphens: auto;
    display: inline-block;
    color: #707275;
    font-size: .75rem;
    font-weight: bolder;
    padding: 0 1rem 0 .75rem;
    margin-bottom: .125rem;
  }

  .input-field{
    background-color: #fff;
    border-left: 0;
    border-right: 0;
    border-top: 0;
    border-bottom: 1.1px solid #747474;
    width: 100%;
    -webkit-transition: border .1s linear,background-color .1s linear;
    transition: border .1s linear,background-color .1s linear;
    display: inline-block;
    padding: 0 1rem 0 .75rem;
    font-size: .75rem;
    line-height: 1.875rem;
    min-height: calc(1.875rem + (1px * 2));
    margin-bottom: .125rem;
  }
  .input-field:focus{
    outline: none;
    border-bottom: 1.5px solid rgba(81, 203, 238, 1);
  }

  .form-control{
    clear: left;
    position: relative;
  }


  .has-search .input-field {
    padding-left: 4.275rem;
  }

  .has-search .form-control-feedback {
    position: absolute;
    z-index: 2;
    display: block;
    width: 4.375rem;
    height: 4.375rem;
    line-height: 1.875rem;
    min-height: calc(1.875rem + (1px * 2));
    text-align: center;
    pointer-events: none;
    color: #aaa;
  }

  .muliti-select-item{
    padding: 0.25rem 0.25rem;
    color: #3e3e3c;
    font-size: .75rem;
    white-space: nowrap;
  }
  .table-all{
    background-color: #fff;
    font-size: inherit;
    width: 100%;
    border-spacing:2px;
    border-color: grey;
  }

  .line-height-reset{
    line-height: 1;
  }
  .table-all thead th{
    background-color: #fafaf9;
    color: #646464;
    font-size: .75rem;
    font-weight: bolder;
    padding: 0.25rem 0.25rem;
    line-height: normal;
  }

  .table-all th{
    padding: 0.25rem 0.25rem;
    white-space: nowrap;
    position: relative;
    color: #646464;
  }

  .table-all td{
    padding: 0.25rem 0.25rem;
    color: #3e3e3c;
    font-size: .75rem;
    white-space: nowrap;
    position: relative;
    line-height: normal;
  }
  .table-bordered{
    border-collapse: separate;
    border-top: 1px solid #dddbda;
    border-bottom: 1px solid #dddbda;
    border-left: 0;
    border-right: 0;
  }

  .table-data{
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #080707;
  }

  .table-all tbody tr{
    counter-increment: row-number;
  }

</style>
<div class="container width-400" style="box-shadow:0 0 10px -1px gray;margin-top:100px; padding:50px;">

  <form class="form-signin">
    <h2 class="layout-title">Update Password</h2>

    {{#if showmessage}}
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Failed!</strong>
        </div>
    {{/if}}
    <label for="inputPasswordOld" class="input-field-label" style="margin-top:20px;" >Old Password</label>
    <div class="form-group">
        {{input type="password" id="inputPasswordOld" class="input-field" placeholder="Enter Old Password"  value=oldPassword}}
    </div>


    <label for="inputPasswordNew" class="input-field-label">New Password</label>
    <div class="form-group">
        {{input type="password" id="inputPasswordNew" class="input-field" placeholder="Enter New Password"  value=newPassword}}
    </div>
    
    <div class="form-check">
      <label class="form-check-label input-field-label">
        <input type="checkbox" class="form-check-input" onclick="myFunction()" style="margin-top:3px;">Show Password
      </label>
    </div>

    <script>
      function myFunction() {
        var x = document.getElementById("inputPasswordNew");
        var y = document.getElementById("inputPasswordOld");
        if (x.type === "password") {
          x.type = "text";
        } else {
          x.type = "password";
        }
        if (y.type === "password") {
          y.type = "text";
        } else {
          y.type = "password";
        }
      }
    </script>

    <h4 style="color:red; font-size:15px;">{{errorMsg}}</h4>
    <br/>
    <button class="button-all button-edit"  {{action 'update' oldPassword newPassword}}  >Update</button>
  </form>

</div>


