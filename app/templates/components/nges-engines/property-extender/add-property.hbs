<style>
  .form-control {
    clear: left;
    position: relative;
  }

  .has-search .input-field {
    padding-left: 4.275rem;
  }

  .has-search .form-control-feedback {
    position: absolute;
    z-index: 2;
    display: block;
    width: 4.375rem;
    height: 4.375rem;
    line-height: 1.875rem;
    min-height: calc(1.875rem + (1px * 2));
    text-align: center;
    pointer-events: none;
    color: #aaa;
  }

  .muliti-select-item {
    padding: 0.25rem 0.25rem;
    color: #3e3e3c;
    font-size: .75rem;
    white-space: nowrap;
  }

  .table-all thead th {
    background-color: #FEFEFE;
    color: #313131;
    font-size: .75rem;
    font-weight: bold;
    line-height: normal;
    font-weight: bolder;
    border-collapse: separate;
    border-top: 1px solid #EDEEEF;
    border-bottom: 1px solid #EDEEEF;
  }

  .table-all td {
    padding: 0.25rem 0.25rem;
    color: #3e3e3c;
    font-size: .75rem;
    white-space: nowrap;
    position: relative;
    line-height: normal;
  }

  .table-bordered {
    border-collapse: separate;
    border-top: 1px solid #dddbda;
    border-bottom: 1px solid #dddbda;
  }

  .table-data {
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
</style>


<br>


<div class="col-md-12">
  <label class="layout-header-title" style="font-size: 20px">Extended Property</label>

  {{#each attributeList.result as |attribute|}}
    {{#if (eq attribute.type "String")}}

      {{nges-core/nges-input-component
        type='text'
        input-field-name=attribute.name
        model=model
        valuePath=attribute.code
        placeholder=attribute.name
        sectionFirst = 'col-sm-4'
        sectionLast = 'col-sm-6'
        didValidate=didValidate}}
    {{/if}}

    {{#if (eq attribute.type "Integer")}}

      {{nges-core/nges-input-component
        type='Number'
        input-field-name=attribute.name
        model=model
        valuePath=attribute.code
        placeholder=attribute.name
        sectionFirst = 'col-sm-4'
        sectionLast = 'col-sm-6'
        didValidate=didValidate}}
    {{/if}}

    {{#if (eq attribute.type "Varchar")}}

      {{nges-core/nges-input-component
        type='text'
        input-field-name=attribute.name
        model=model
        valuePath=attribute.code
        placeholder=attribute.name
        sectionFirst = 'col-sm-4'
        sectionLast = 'col-sm-6'
        didValidate=didValidate}}
    {{/if}}

  {{/each}}
</div>
