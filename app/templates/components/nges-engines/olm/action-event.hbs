{{outlet}}
<div class="card">
  <div class="card-body">
    <h4 class="layout-header-title">Action Events</h4>
    <hr class="header-label-line">
    <div class="row">
      <div class="col-md-6">
        {{#if showTable}}
          <div>
            <div class="form-group has-search">
              <span class="fa fa-search form-control-feedback"></span>
              <input type="text" class="input-field" onkeyup={{action 'getFilterKey' value='target.value'}}
                     placeholder=" Type to Search">
            </div>
            <div class="table-container"
                 style="overflow-y: auto; max-height: 300px; overflow-x: auto;">
              <table class="table-all">
                <thead>
                <tr>
                  <!--<th class="table-data table-bordered">
                    <div>
                      S/N
                    </div>
                  </th>-->
                  <th class="table-data table-bordered">
                    <div>
                      Name
                    </div>
                  </th>

                  <th class="table-data table-bordered">
                    <div>
                      Code
                    </div>
                  </th>

                  <th class="table-data table-bordered">
                    <div>
                      Action
                    </div>
                  </th>
                </tr>
                </thead>
                <tbody>

                {{#each actionEventList as |item index|}}
                  <tr>
                    <!--<td class="table-data table-bordered">
                    <div>
                      {{nges-engines/olm/value-check index 1}}
                    </div>
                  </td>-->

                    <td class="table-data table-bordered">
                      <div>
                        {{item.attributes.name}}
                      </div>
                    </td>

                    <td class="table-data table-bordered">
                      <div>
                        {{item.attributes.code}}
                      </div>
                    </td>

                    <td class="table-data table-bordered">
                      <center>
                        <button {{action 'editActionEvent' item }}
                          style="width: 100px; margin-bottom: 5px" class="nges-button nges-button-success">Edit
                        </button>
                      </center>

                      <!--<button {{action 'deleteActionEvent'
                                           item }} style="width: 100px; margin-bottom: 5px" class="button-all button-danger">Delete</button>-->
                    </td>
                  </tr>
                {{/each}}

                </tbody>
              </table>
            </div>
          </div>
        {{/if}}
      </div>

      <!--<div class="col-md-1">
        <div class="vertical-line"></div>
      </div>-->

      <div class="col-md-6">
        <form id="actionEventInfo" class="adjust-card-style field-form max-width" method="post">
          <label class="instruction-label" style="font-size: 16px">Registration</label>
          <div class="row">
            <div class="col-md-3">
              <label for="name" class="input-field-label">Name</label>
            </div>
            {{#if editClick}}
              <div class="col-md-9">
                {{input type="text" class="input-field" id="role"  name="role"
                        placeholder="Enter Action Name" value=name}}
              </div>
            {{/if}}
            {{#if resetClick}}
              <div class="col-md-9">
                <input type="text" class="input-field" id="role" name="role"
                       placeholder="Enter Action Name"
                       oninput={{action (mut name) value="target.value"}} onkeyup={{action 'actionNameCheck'
                                                                                           value='target.value'}}>

                {{#if nameMatchedAlert}}
                  <h2 style="color:red; font-size:13px;">State name exists!</h2>
                {{/if}}
              </div>
            {{/if}}

          </div>

          <div class="row">
            <div class="col-md-3">
              <label for="code" class="input-field-label">Code</label>
            </div>

            {{#if editClick}}
              <div class="col-md-9">
                {{input type="text" class="input-field" id="classTypeCode" name="classTypeCode"
                        placeholder="Enter ClassType Code"  value=code
                }}
              </div>
            {{/if}}

            {{#if resetClick}}
              <div class="col-md-9">
                {{input type="text" class="input-field" id="classTypeCode" name="classTypeCode"
                        placeholder="Enter ClassType Code"  value=( nges-engines/olm/code-generator name)
                }}

                {{#if codeMatchedAlert}}
                  <h2 style="color:red; font-size:13px;">State code exists!</h2>
                {{/if}}
              </div>
            {{/if}}

          </div>

          <div class="row">
            <div class="col-md-3">
              <label for="description" class="input-field-label">Description</label>
            </div>
            <div class="col-md-9">
              {{input type="text" class="input-field" id="roleDescription" name="roleDescription"
                      placeholder="Enter Description" value=description}}
            </div>
          </div>

          <div class="row float-right">


            <div class="col-md-4">
              <div class="form-btn-container">
                <div class="nges-button nges-button-success"
                     style="width: 100px;" {{action "viewTableData"}}>
                  View
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-btn-container">
                <div class="nges-button nges-button-success"
                     style="width: 100px;" {{action "refreshPage"}}>
                  Clear
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-btn-container">
                {{#if editClick}}
                  <div class="nges-button nges-button-success"
                       style="width: 100px;" {{action "updateActionEvent"
                                                                                           actionEvent}}>
                    Update
                  </div>
                {{/if}}

                {{#if resetClick}}
                  <div class="nges-button nges-button-success"
                       style="width: 100px;" {{action "save"}}>
                    Save
                  </div>
                {{/if}}
              </div>
            </div>


          </div>

        </form>
        <br>
      </div>

    </div>

  </div>
</div>


<!-- The Modal -->
<div class="modal" id="actionEventModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="layout-title">Update Action Event Name</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">

        <form id="updateActionEventId" method="post">

          {{#if actionEvent}}
            <label for="name" class="input-field-label">Name:</label>
            <input class="input-field" name="name" value={{actionEvent.name}}>

            <button class="nges-button nges-button-success" data-dismiss="modal" {{action "updateActionEvent" actionEvent}}
                    style="width: 100px;">Update
            </button>
          {{/if}}

        </form>

      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <div class="form-btn-container btn-right">
          <button type="button" class="nges-button nges-button-success" data-dismiss="modal"
                  style="width: 100px; margin-bottom: 5px">Close
          </button>
        </div>
      </div>
    </div>
  </div>
</div>