

{{!nges-core/json dataList}}



<select class="js-select2" onchange={{action 'getSelectedItem' value="target.value"}}>
  <option>{{message}}</option>
  {{#each dataList as |data|}}
    <option value={{nges-engines/olm/object-to-string data}}>{{nges-core/attribute-display-helper data displayName}}</option>
  {{/each}}
</select>



