<style>
  .layout-title {
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 1.825rem;
    font-weight: 400;
    color: #123F62;
    display: block;
  }

  .rms-hr-line {
    margin-top: -3px;
    border: 1.5px solid #123F62;
  }


  .country-button-all {
    position: relative;
    display: inline-block;
    padding: 0;
    background: transparent;
    background-clip: border-box;
    border: 1px solid transparent;
    border-radius: .25rem;
    line-height: 1.275rem;
    text-decoration: none;
    color: #0070d2;
    -webkit-appearance: none;
    white-space: normal;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;

    font-size: .75rem;
    white-space: nowrap;
    position: relative;
  }

  .country-button-save {
    padding-left: 1rem;
    padding-right: 1rem;
    text-align: center;
    vertical-align: middle;
    border: 1px solid #dddbda;
    -webkit-transition: border 0.15s linear;
    transition: border 0.15s linear;
    color: #fff;
    border-color: #dddbda;
    background-color: #123F62;
    border-color: #123F62;
  }

  .country-button-save:hover {
    background-color: #12466b;
    border-color: #12466b;
    color: #fff;
    cursor: pointer;
  }

  .country-button-edit {
    padding-left: 1rem;
    padding-right: 1rem;
    text-align: center;
    vertical-align: middle;
    border: 1px solid #dddbda;
    -webkit-transition: border 0.15s linear;
    transition: border 0.15s linear;
    border-color: #dddbda;
    background-color: #fff;
    border-color: #0070d2;
  }

  .country-button-edit:hover {
    background-color: #f4f6f9;
    border-color: #0070d2;
    color: #000;
    cursor: pointer;
  }

  .input-field-label {
    overflow-wrap: break-word;
    word-wrap: break-word;
    -webkit-hyphens: auto;
    -ms-hyphens: auto;
    hyphens: auto;
    display: inline-block;
    color: #707275;
    font-size: .75rem;
    font-weight: bolder;
    padding: 0 1rem 0 .75rem;
    margin-bottom: .125rem;
  }

  .input-field {
    background-color: #fff;
    border-left: 0;
    border-right: 0;
    border-top: 0;
    border-bottom: 1.1px solid #747474;
    width: 100%;
    -webkit-transition: border .1s linear, background-color .1s linear;
    transition: border .1s linear, background-color .1s linear;
    display: inline-block;
    padding: 0 1rem 0 .75rem;
    font-size: .75rem;
    line-height: 1.875rem;
    min-height: calc(1.875rem + (1px * 2));
    margin-bottom: .125rem;
  }

  .input-field:focus {
    outline: none;
    border-bottom: 1.5px solid rgba(81, 203, 238, 1);
  }

  .form-control {
    clear: left;
    position: relative;
  }

  .has-search .input-field {
    padding-left: 4.275rem;
  }

  .has-search .form-control-feedback {
    position: absolute;
    z-index: 2;
    display: block;
    width: 4.375rem;
    height: 4.375rem;
    line-height: 1.875rem;
    min-height: calc(1.875rem + (1px * 2));
    text-align: center;
    pointer-events: none;
    color: #aaa;
  }

  .muliti-select-item {
    padding: 0.25rem 0.25rem;
    color: #3e3e3c;
    font-size: .75rem;
    white-space: nowrap;
  }

</style>

<div class="card">
  <div class="card-body">
    <h1 class="layout-title" style="font-size: 20px;">Currency</h1>
    <hr class="header-label-line">

    <form class="form-horizontal">
      <div class="row">
        <div class="col-md-6">

        </div>

        <div class="col-md-6">

          <div>
            {{nges-core/nges-input-component
              type='text'
              input-field-name="Id"
              model=model
              valuePath='currencyId'
              placeholder='Id'
              sectionFirst = 'col-sm-2'
              sectionLast = 'col-sm-10'
              didValidate=didValidate
              maxLength="3"}}
          </div>

          <div>
            {{nges-core/nges-input-component
              type='text'
              input-field-name="Currency"
              model=model
              valuePath='currencyName'
              placeholder='Currency Name'
              sectionFirst = 'col-sm-2'
              sectionLast = 'col-sm-10'
              didValidate=didValidate}}
          </div>

          <div>
            {{nges-core/nges-input-component
              type='text'
              input-field-name="Code"
              model=model
              valuePath='currencyCode'
              placeholder='Currency Code'
              sectionFirst = 'col-sm-2'
              sectionLast = 'col-sm-10'
              didValidate=didValidate}}
          </div>

          <br>
          {{#if showAlert}}
            <div class='alert float-right'>
              <div class='fa fa-times icon-remove' {{action 'toggleProperty' 'showAlert'}}></div>
              <h1 style="color: red; font-size: 12px">Please fix all the errors above before continuing.</h1>
            </div>
          {{/if}}

          {{#if isValid}}
            <span class='valid-input fa fa-check'><h1 style="color: red;font-size: 12px">Error Message</h1></span>
          {{/if}}

          <div class="float-right">
            <button id='clear' class="country-button-all country-button-save" {{action 'clear'}}>Clear</button>
            <button id='save' class="country-button-all country-button-save"  {{action 'saveAction'}}>Save</button>
          </div>
        </div>
      </div>
    </form>
  </div>


</div>